 $query = "INSERT into `tokens` (username, token, email, trn_date) VALUES ('$username', '$token', '$email', '$trn_date')";
    $result = mysqli_query($con, $query);
    if ($result) {
        echo "<div class='form'><h3>Your reset token has been sent.</h3></div>";
    } else {
        echo "Error: " . mysqli_error($con);
    }
}
