<?php
// Include your database connection file here
require('db.php');

// Check if the form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST['submit'])) {
    // Get the form data
    $title = $_POST['title'];
    $content = $_POST['content'];
    
    // Insert the blog post details into the database
    $sql = "INSERT INTO blog_posts (title, content) VALUES (?, ?)";
    $stmt = $con->prepare($sql); // Change $conn to $con here
    $stmt->bind_param("ss", $title, $content);
    $stmt->execute();
    $stmt->close();
    
    // Redirect back to the dashboard page after processing
    header("Location: dashboard.php");
    exit();
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Blog</title>
</head>
<body>
    <h1>Upload Blog</h1>
    <form action="upload_blog.php" method="post">
        <label for="title">Title:</label><br>
        <input type="text" id="title" name="title" required><br><br>
        <label for="content">Content:</label><br>
        <textarea id="content" name="content" rows="5" required></textarea><br><br>
        <input type="submit" name="submit" value="Upload">
    </form>
</body>
</html>
